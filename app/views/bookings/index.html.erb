<div>
  <% @bookings.each do |booking|%>
    <h3><%= booking.island.name %></h3>
    <p><%= booking.confirmed ? "Confirmed! Enjoy your trip ☀️ " : "Your request is still being reviewed" %></p>
    <p><%= booking.start_date %> - <%= booking.end_date %></p>
    <% booking.island.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <br><br><br>
  <% end %>
</div>
