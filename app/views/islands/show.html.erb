<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path @island.photos.first.key, height: 500, crop: :fill %>')">
  <div class="container">
    <h1><%= @island.name.upcase %></h1>
  </div>
</div>

<div class="island-info">
  <div class="info">
    <div class ="host-info">
      <div class="photo">
        <%= cl_image_tag @island.user.photo.key, height: 300, crop: :fill, class: 'avatar-large' %>
      </div>
      <div class="name">
        <h2><%= @island.user.username.capitalize %></h2>
      </div>
    </div>

    <div class="numbers">
      <div>
        <p><strong>Price</strong></p><br><br>
        <h3>$<%= @island.price %></h3>
      </div>
      <div>
        <p><strong>Location</strong></p><br><br>
        <h3><%= @island.location %></h3>
      </div>
      <div>
        <p><strong>Size</strong><p><br><br>
        <h3><%= @island.squarekm %>km</h3>
      </div>
      <div>
        <p><strong>Villas</strong></p><br><br>
        <h3><%= @island.number_of_villas%></h3>
      </div>
      <div>
        <p><strong>Guests</strong></p><br><br>
        <h3><%= @island.guests%></h3>
      </div>
    </div>


      <div class="icons">
        <div>
          <% if @island.wifi === true %>
            <img class="wifi" src="https://image.flaticon.com/icons/png/512/254/254613.png" alt="">
          <% end %>
        </div>
        <div>
          <% if @island.helicopter === true %>
          <img class="helicopter" src="https://image.flaticon.com/icons/png/512/635/635717.png" alt="">
          <% end %>
        </div>

        <div>
          <% if @island.golf_course === true %>
          <img class="golf" src="https://image.flaticon.com/icons/png/512/39/39675.png" alt="">
          <% end %>
        </div>

        <div>
          <% if @island.private_chef === true %>
          <img class="chef" src="https://image.flaticon.com/icons/png/512/483/483841.png" alt="">
          <% end %>
        </div>
    </div>

    <div class="lux">
    <div>
      <img src="https://image.flaticon.com/icons/png/512/1034/1034882.png" alt="">
      <p></p>
      <h5 style="text-align: center"><%= @island.yachts%></h5>
    </div>
    <div>
      <img src="https://image.flaticon.com/icons/png/512/90/90460.png" alt="">
      <p></p>
      <h5  style="text-align: center"><%=@island.butlers%></h5>
    </div>
    </div>
  </div>

  <% unless current_user === @island.user %>
  <div class="book">
  <h1 style="text-align: center">Book Today! </h1>
    <div class="form-wrapper" style="margin: 0 auto;">
      <%= simple_form_for([@island, @booking]) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-primary" %>
        </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
